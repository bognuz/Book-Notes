<%- include("./partials/header.ejs")%>


 <form action="/add" method="post">
  <input type="submit" value="Add new book note"/>
 </form>


<% bookList.forEach(function(entry) { %>
 
<label>
  <hr>
<h3><%=entry.booktitle%></h3>
<img src="<%=entry.bookcover%>">
<label>ISBN: </label> <%=entry.isbn%> <br>
<label>Author:</label> <%=entry.bookauthor%> <br>
 <label>My Note: </label> <%=entry.note%>  <br>
  <label>My Rating </label><%=entry.rating%> <br>

  <label>Note Added: </label><%=entry.dateread.toLocaleDateString('en-GB')%>
</label>


<form action="/edit" method="get">
  <input type="hidden" name="id" value="<%= entry.id %>">
  <input type="submit" value="Edit"/>
 </form>

 <form action="/deleteBook" method="post" onsubmit="return confirmDelete('<%= entry.booktitle %>');">
  <input type="hidden" name="id" value="<%= entry.id %>">
  <input type="submit" value="Delete book">
</form>

<%})%>
 <hr>

</body>

<script>
  function confirmDelete(bookTitle) {
    return confirm(`Are you sure you want to delete the book: "${bookTitle}"?`);
  }
</script>

<%- include("./partials/footer.ejs")%>